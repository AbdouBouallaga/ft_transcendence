// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())

  login42         String    @unique

  // If username is not set, the client need to finish setting up the account
  username        String?   @unique

  // Holds the profile img in base64
  avatar          String?

  // Multi-factor Authentication. If not set then 2FA is not enabled
  mfaKey          String?

  @@map(name: "users")
}
